<br>
<%= link_to 'Add New Food', new_food_path, class: 'btn btn-primary' %>

<table class="table table-stripped table-borderer table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Measurement Unit</th>
      <th>Unit Price</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @foods.each do |food| %>
      <tr>
        <td><%= food.name %></td>
        <td><%= food.measurement_unit %></td>
        <td><%= food.price %></td>
        <td>
          <% if food.user == current_user %>
            <%= form_with(model: food, method: :delete, local: true, data: { confirm: 'Are you sure?' }) do |form| %>
              <%= form.submit 'Remove', class: 'btn btn-danger' %>
            <% end %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
